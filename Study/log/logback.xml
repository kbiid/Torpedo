<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

	<!-- 콘솔 출력 (stdout) -->
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%d{yyyy-MM-dd HH:mm:ss}][%-5level][%logger{35}] - %msg%n
			</pattern>
		</encoder>
	</appender>

	<!-- 일별 파일로 저장 -->
	<appender name="ROLLING"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- 현재 날짜의 파일은 아래 경로에 logback.log로 저장 -->
		<file>D:/test/log/logback.log</file>
		<encoder>
			<pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-3relative][%thread] %-5level
				%logger{35} - %msg%n</pattern>
		</encoder>
		<!-- 요일이 바뀌면서 과거 로그 파일 이름으로 변경 -->
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>D:/test/log/logback.%d{yyyy-MM-dd}.log
			</fileNamePattern>
		</rollingPolicy>
	</appender>

	<logger name="log.invalid" level="info" additivity="false">
		<appender-ref ref="ROLLING" />
	</logger>

	<logger name="src.Main.Child" additivity="true" />

	<root level="degug">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>